    foreach ($this->layout()->javascript as $key => $val) {
        if ($val != '') {
            $sJavascript .= "<script type=\"text/javascript\" src=\"{$val}\"></script>\n";
        }
    }
}
if (isSet($this->layout()->javascriptCode)) {
    $sJavascript .= <<<_eos_
